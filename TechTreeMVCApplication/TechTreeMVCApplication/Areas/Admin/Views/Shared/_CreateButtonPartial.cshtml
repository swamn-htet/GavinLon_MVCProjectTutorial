@model int

@{
    if(Model == 0)
    {
        <a asp-action="Create" class="btn btn-outline-info"><i class="fa-solid fa-plus mr-2"></i>Create New</a>
    }
    else
    {
        <a asp-action="Create" asp-route-CategoryId="@Model" class="btn btn-outline-info"><i class="fa-solid fa-plusmr-2"></i>Create New</a>

    }
}
