@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore
@using TechTreeMVCApplication.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManger

@if (SignInManager.IsSignedIn(User) && await UserManger.IsInRoleAsync(UserManger.GetUserAsync(User).Result, "admin"))
{
    <li class="nav-item dropdown show"> 
        <a class="dropdown-toggle nav-link" href="#" data-toggle="dropdown">Admin</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="UsersToCategory" asp-action="Index">Users To Categories</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-area="Admin" asp-controller="MediaType" asp-action="Index">Media Types</a>
        </div>
    </li>
}